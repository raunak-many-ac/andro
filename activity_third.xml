<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.battleofsunnygmail.quiz.FirstOne">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question 2"
        android:textStyle="bold"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/number1" />


    <TextView
        android:id="@+id/quest1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="how am i shifting to next pages on clicking to submit button??"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"
        android:layout_below="@id/number1" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/number1"
        android:layout_marginTop="400dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="30dp"
        android:text="submit"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:onClick="wow"/>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/checkBox2"
        android:layout_below="@+id/quest1"
        android:layout_marginTop="40dp"
        android:text="By setting invisibility of views" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/number1"
        android:layout_below="@+id/checkBox"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="36dp"
        android:text="by making different app and merging them using intent objects" />

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/checkBox2"
        android:layout_below="@+id/checkBox2"
        android:layout_marginTop="24dp"
        android:text="By creating Intent object by passing proper parameters" />

    <CheckBox
        android:id="@+id/checkBox4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/checkBox3"
        android:layout_below="@+id/checkBox3"
        android:layout_marginTop="28dp"
        android:text="by accesing a method that contains proper method for hopping to next page when submit button is clicked" />

</RelativeLayout>
