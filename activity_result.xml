<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.battleofsunnygmail.quiz.FirstOne">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Damn you cracked it man\nYour Score is"
        android:textStyle="bold"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/number1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_below="@id/number1"
        android:id="@+id/number2" />

    <TextView
        android:id="@+id/thanks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/number2"
        android:layout_marginStart="141dp"
        android:layout_toEndOf="@+id/number2"
        android:text="Thanks to"
        android:textSize="20dp"
        android:textColor="#ff0000"/>

    <ImageView
        android:src="@drawable/udacity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/thanks"
        android:id="@+id/image"/>

    <TextView
        android:id="@+id/thanks2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_marginStart="100dp"
        android:layout_toEndOf="@+id/number2"
        android:text="My mentors and friend"
        android:textSize="20dp"
        android:textColor="#ff0000"/>


</RelativeLayout>
